<div class="activity-wrapper">
    {{#if user}}
        {{#each user.activity}}
            <div class="form-elem">
            <div>
            <label for="day">Selected Day</label>
                <select class="mr-3 graph-days">
                    <option value="{{this.day}}" selected disabled>{{this.day}}</option>
                </select>
            </div>
        
            <div>
            <label for="foodId">Selected Food:</label>
                <select class="mr-3">
                    <option value="{{this.food.name}}" selected disabled>{{this.food.name}}</option>
                </select>
            </div>

            <input value="{{this.food.calories}}" class="graph-calories" hidden>

            <div>
                <label for="qty-consumed">Quantity Consumed (in grams)</label>
                <input type="number" class="user-activity" value="{{this.units}}" disabled>
            </div>
    </div>
        {{/each}}
    {{/if}}
    
    {{#data user.activity}}
    <form action="/auth/activity" method="POST" class="activity-form mx-auto">
        <div class="form-elem">
            <div>
            <label for="day">Select Day</label>
                <select name="day-one" class="mr-3">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </div>
        
            <div>
            <label for="foodId">Select Food:</label>
                <select name="foodId-one" class="mr-3">
                    {{#each foods}}
                        <option value='{ "name": "{{this.food}}", "calories": "{{this.calories}}" }'>{{this.food}}</option>
                    {{/each}}
                </select>
            </div>

            <div>
                <label for="qty-consumed">Quantity Consumed (in grams)</label>
                <input type="number" name="qty-one" class="extra">        
            </div>
    </div>
    <button type="submit" class="btn btn-primary w-25">Submit</button>
</form>
{{/data}}
</div>

<a href="/auth/recommendations" class="btn btn-primary" id="recommendations-btn">Recommendations</a>

<div id="canvas-container">
    <canvas id="myChart"></canvas>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script src="/scripts/activity.js"></script>