<form action="/auth/signup" method="POST" id="signup-form" enctype="multipart/form-data">
    <div class="form-group">
    <label for="fullname">Your Full Name</label>
    <input type="text" name="fullname"
      placeholder="Your Name" class="form-control" required><br>
    </div>

    <div class="form-group">
    <label for="email">Email</label>
    <input type="email" name="email"
      placeholder="Your Email" class="form-control" required><br>
    </div>

    <div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="password"
      placeholder="********" class="form-control" required><br>
    </div>

    <div class="form-group">
      <label for="select-list">Select Your Plan:</label>
      <select class="form-control" id="planId" name="planId">
        {{#each plans}}
          <option value="{{_id}}">{{this.title}}</option>
        {{/each}}
      </select><br>
    </div>

    <div class="form-group">
    <label for="image_url">Your Image (.jpg):</label>
    <input type="file" class="form-control" id="url" name="image_url">
    </div>

    <button type="submit" class="btn btn-primary" id="create-btn">Create account</button>
</form>
{{#if errorMessage}}
          {{errorMessage}}
{{/if}}