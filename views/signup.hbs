    <div class="form-group">
    <label for="height">Height</label>
    <input type="number" name="height"
      placeholder="Your height" class="form-control" required><br>
    </div> --}}

    <div class="form-group">
      <label for="select-list">Select Your Plan:</label>
      <select class="form-control" id="planId" name="planId">
        {{#each plans}}
          <option value="{{_id}}">{{this.title}}</option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
    <label for="image_url">Your Image (.jpg):</label>
    <input type="file" class="form-control" id="url" name="image_url">
    </div>

    <button type="submit" class="btn btn-primary" id="create-btn">Create account</button>
</form>
    {{#if errorMessage}}
        {{errorMessage}}
    {{/if}}