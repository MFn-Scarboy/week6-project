<form action="/auth/update/{{loggedInUser._id}}" method="POST" class="mt-3 p-3" enctype="multipart/form-data">
    <div class="form-group">
    <label for="username">Your Full Name</label>
    <input type="text" name="fullname"
      value={{loggedInUser.fullname}} class="form-control"><br>
    </div>

    <div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="password"
      placeholder="********" class="form-control"><br>
    </div>

    <div class="form-group">
    <label for="email">Email</label>
    <input type="email" name="email"
      value={{loggedInUser.email}} class="form-control"><br>
    </div>

    <div class="form-group">
    <label for="tel">Contact Number</label>
    <input type="tel" name="number"
      value={{loggedInUser.number}} class="form-control"><br>
    </div>

    <div class="form-group">
    <label for="age">Age</label>
    <input type="number" name="age"
      value={{loggedInUser.age}} class="form-control"><br>
    </div>

    <div class="form-group">
    <label for="weight">Weight</label>
    <input type="number" name="weight"
      value={{loggedInUser.weight}} class="form-control"><br>
    </div>

    <div class="form-group">
    <label for="height">Height</label>
    <input type="number" name="height"
      value={{loggedInUser.height}} class="form-control"><br>
    </div>

    <div class="form-group">
    <label for="image_url">Your Image (.jpg):</label>
    <input type="file" class="form-control" id="url" name="image_url">
    </div>

    <button type="submit" class="btn btn-primary">Update Profile</button>
</form>